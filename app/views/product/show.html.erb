<div class="container">
  <div class="image-container text-left">
    <div class="row">
      <div class="col-xs-6">
        <%= image_tag @product.image.url %>
      </div>
    </div>
  </div>

  <div class="product-container text-center">
    <div class="row">
      <div class="col-xs-12">
        <h3 class='margin-20 margin-bottom-15'>
          <%= @product.title %>
        </h3>
      </div>

      <div class="col-xs-12">
        <p class="well margin-left-5">
          <%= @product.text %>
        </p>
      </div>

      <div class="col-xs-12">
        <h2>
          <%= @product.price %> â‚¬ TTC
        </h2>
      </div>
    </div>
  </div>
</div>

<div class="stats-container text-center well">
  <div class="row">
    <div class="col-xs-12 margin-20 margin-bottom-15">
      <h4>Informations </h4>
    </div>
  </div>


  <div class="row">
    <div class="col-xs-6">

      Langue: <%= @product.statistic.language %>

    </div>
    <div class="col-xs-6">
      Collection: <%= @product.statistic.collection %>
    </div>

    <div class="col-xs-6">
      Nombre de pages: <%= @product.statistic.poche %>
    </div>

    <div class="col-xs-6">
      Dimensions: <%= @product.statistic.dimension %>
    </div>

    <div class="col-xs-6">
      Classement site marchand: <%= @product.statistic.classement %>
    </div>
  </div>
</div>

<div class="row margin-20 text-center">
  <div class="col-xs-12">
    <%= link_to "All products", product_index_path, {class: "btn btn-primary"} %>
  </div>
</div>
